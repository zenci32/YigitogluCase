@model YigitogluCase.Models.Makale
@{
    ViewBag.Title = "MakaleGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/Makale/MakaleGuncelle" method="post" enctype="multipart/form-data">
    <table class="table table-striped">
        <input type="hidden" name="MakaleId" value="@Model.MakaleId"/>
        <tr>
            <td>
                Başlık :
            </td>
            <td>
                <input type="text" name="Baslik" value="@Model.Baslik" />
            </td>
        </tr>
        <tr>
            <td>
                İçerik :
            </td>
            <td>
                <input type="text" name="Icerik" value="@Model.Icerik" />
            </td>
        <tr>
            <td>
                Kategori :
            </td>
            <td>
                <select name="KategoriID">
                    @foreach (YigitogluCase.Models.Kategori item in ViewBag.Kategoriler)
                    {
                        <option value="@item.KategoriId">@item.Adi</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                Resim :
            </td>
            <td>
                <input type="file" name="resim" value="" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" name="name" value="Güncelle" />
            </td>
        </tr>
    </table>
</form>
